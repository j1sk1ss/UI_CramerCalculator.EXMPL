<Window x:Class="MatrixCalculator.Windows.QuestSetter"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MatrixCalculator.Windows"
        mc:Ignorable="d"
        Title="QuestSetter" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <ScrollViewer x:Name="EquationBox" HorizontalScrollBarVisibility="Visible">
            <Grid x:Name="EquationGrid" Height="70" VerticalAlignment="Top" Margin="0,10,0,0">
                <Button Width="25" Height="25" HorizontalAlignment="Left" Margin="30,-12,0,0" Click="IncreaseMatrix"> + </Button>
            </Grid>
        </ScrollViewer>
        <Button Height="25" Width="100" Margin="650,380,0,0" Click="SetValues"> Задать уравнение </Button>
        <Button Height="25" Width="100" Margin="430,380,0,0" Click="Clear"> Очистить </Button>
    </Grid>
</Window>
