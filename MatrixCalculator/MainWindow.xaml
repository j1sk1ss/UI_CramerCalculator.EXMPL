<Window x:Class="MatrixCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatrixCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <Label x:Name="A"></Label> 
        </ScrollViewer>
        <Button Height="20" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="SetVariables"> Задать уравнение </Button>
        <Button Height="20" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="ShowAnswer"> Показать решение </Button>
        
    </Grid>
</Window>
